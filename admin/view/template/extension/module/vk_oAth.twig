{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-vk" data-toggle="tooltip" title="{{ button_get_token }}" class="btn btn-primary vk-btn-lh js-vk-btn"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-body">
        <form id="form-vk" action="{{ action }}" method="post" class="form-horizontal js-vk-form">
          <fieldset>
            <legend>{{ text_authorization }}</legend>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="vk_oath_id_application">{{ text_id_application }}</label>
              <div class="mb-10 col-lg-4 col-md-6 col-sm-10">
                <input id="vk_oath_id_application" type="text" name="vk_oath_id_application" value="{{ vk_oath_id_application }}" class="form-control js-vk-empty">
                {% if (error_id_application) %}
                  <div class="text-danger">{{ error_id_application }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="vk_oath_secret_key">{{ text_secret_key }}</label>
              <div class="col-lg-4 col-md-6 col-sm-10">
                <input id="vk_oath_secret_key" type="text" name="vk_oath_secret_key" value="{{ vk_oath_secret_key }}" class="form-control js-vk-empty">
                {% if (error_secret_key) %}
                  <div class="text-danger">{{ error_secret_key }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="vk_oath_id_group">{{ text_id_group }}</label>
              <div class="col-lg-4 col-md-6 col-sm-10">
                <input id="vk_oath_id_group" type="text" name="vk_oath_id_group" value="{{ vk_oath_id_group }}" class="form-control js-vk-empty">
                {% if (error_id_group) %}
                  <div class="text-danger">{{ error_id_group }}</div>
                {% endif %}
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}